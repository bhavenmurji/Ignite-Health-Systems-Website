{
  "name": "ignite-health-api",
  "version": "1.0.0",
  "description": "Production-ready Backend API for Ignite Health Systems with enhanced security and monitoring",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server-enhanced.js",
    "dev": "nodemon server.js",
    "dev:enhanced": "NODE_ENV=development nodemon server-enhanced.js",
    "test": "jest --config=jest.config.js",
    "test:watch": "jest --config=jest.config.js --watch",
    "test:coverage": "jest --config=jest.config.js --coverage",
    "test:security": "npm audit && node tests/security-test.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "validate-env": "node scripts/validate-env.js",
    "backup": "node scripts/backup-database.js",
    "health-check": "curl -f http://localhost:3001/health || exit 1"
  },
  "keywords": [
    "healthcare",
    "api",
    "express",
    "security",
    "production-ready",
    "rate-limiting",
    "validation"
  ],
  "author": "Ignite Health Systems",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "validator": "^13.11.0",
    "isomorphic-dompurify": "^2.4.0",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "express-slow-down": "^2.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-security": "^1.7.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bhavenmurji/Ignite-Health-Systems-Website.git"
  },
  "bugs": {
    "url": "https://github.com/bhavenmurji/Ignite-Health-Systems-Website/issues"
  },
  "homepage": "https://ignitehealthsystems.com"
}