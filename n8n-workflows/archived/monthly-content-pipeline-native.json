            "Date": "={{ $now.toISO() }}",
            "Status": "Pending Approval",
            "Research": "={{ $node['Gemini - Research Phase'].json.text }}",
            "Draft": "={{ $json.text }}",
            "Approved Date": "",
            "Campaign ID": ""
          }
        },
        "options": {}
