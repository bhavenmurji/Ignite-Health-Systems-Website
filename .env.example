# =============================================================================
# IGNITE HEALTH SYSTEMS - ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains all environment variables needed for the application.
# Copy this file to .env and fill in the actual values.
# DO NOT commit the .env file to version control.

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Node.js Environment (development, production, test)
NODE_ENV=development

# Application Port
PORT=3001

# =============================================================================
# CLOUDFLARE CONFIGURATION
# =============================================================================

# Cloudflare API Token (required for Cloudflare Pages deployment)
# Create at: https://dash.cloudflare.com/profile/api-tokens
# Permissions: Zone:Zone:Read, Zone:Page Rule:Edit, Zone:Zone Settings:Edit
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# Cloudflare Account ID (found in right sidebar of any Cloudflare page)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here

# Cloudflare Zone ID (found in Overview tab of your domain)
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here

# Alternative Cloudflare API Key (legacy, use token instead)
CLOUDFLARE_API_KEY=your_cloudflare_api_key_here

# =============================================================================
# N8N WORKFLOW AUTOMATION
# =============================================================================

# N8N API Key for automation workflows
# Generate at: https://your-n8n-instance.com/settings/api
N8N_API_KEY=your_n8n_api_key_here

# N8N Webhook URL for form submissions (must be NEXT_PUBLIC_ for client-side access)
# This URL receives form submissions from the website
NEXT_PUBLIC_N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/ignite-interest-form

# N8N Webhook URL for newsletter subscriptions (server-side only)
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/ignite-signup

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Email service credentials for sending notifications
# Use Gmail, SendGrid, or your preferred SMTP service
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password_or_app_password

# Admin email for receiving form submissions
ADMIN_EMAIL=admin@ignitehealthsystems.com

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Google Services
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret

# Gemini AI API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Mailchimp Configuration
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
MAILCHIMP_AUDIENCE_ID=your_mailchimp_audience_id

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# GitHub Token for repository access
GITHUB_TOKEN=your_github_personal_access_token

# =============================================================================
# FRONTEND CONFIGURATION (NEXT_PUBLIC_ variables are exposed to the browser)
# =============================================================================

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://ignitehealthsystems.com
NEXT_PUBLIC_API_URL=https://api.ignitehealthsystems.com
NEXT_PUBLIC_DOMAIN=https://ignitehealthsystems.com

# Analytics and Tracking
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_FB_PIXEL_ID=your_facebook_pixel_id
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id

# Feature Flags
NEXT_PUBLIC_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_HIPAA_COMPLIANT=true
NEXT_PUBLIC_HEALTHCARE_MODE=true

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Vercel Configuration (if using Vercel)
VERCEL_ENV=production
VERCEL_URL=your-project.vercel.app

# =============================================================================
# SECURITY AND ENCRYPTION
# =============================================================================

# JWT Secret for authentication (generate a strong random string)
JWT_SECRET=your_super_secret_jwt_key_here

# Session Secret (generate a strong random string)
SESSION_SECRET=your_session_secret_here

# Encryption Key for sensitive data
ENCRYPTION_KEY=your_encryption_key_here

# =============================================================================
# DATABASE CONFIGURATION (if using external database)
# =============================================================================

# PostgreSQL Database URL
DATABASE_URL=postgresql://user:password@localhost:5432/ignite_health

# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/ignite_health

# Redis Configuration
REDIS_URL=redis://localhost:6379

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================

# Debug Mode
DEBUG=ignite:*

# Test Database URL
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/ignite_health_test

# Development Server Configuration
DEV_SERVER_PORT=3000
API_SERVER_PORT=3001

# =============================================================================
# EXTERNAL API ENDPOINTS
# =============================================================================

# Healthcare APIs
EPIC_API_ENDPOINT=https://api.epic.com
CERNER_API_ENDPOINT=https://api.cerner.com

# AI/ML Services
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Application Monitoring
SENTRY_DSN=your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_api_key

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# =============================================================================
# WEBHOOK ENDPOINTS
# =============================================================================

# Stripe Webhooks (if using payments)
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# GitHub Webhooks
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret

# =============================================================================
# ADDITIONAL CONFIGURATION
# =============================================================================

# Time Zone
TZ=America/New_York

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Cache Configuration
CACHE_TTL=3600  # 1 hour in seconds