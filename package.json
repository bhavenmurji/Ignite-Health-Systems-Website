    "test:visual": "playwright test --config=tests/playwright.config.js tests/visual-regression/",
    "test:all": "npm run test && npm run test:e2e && npm run test:performance",
    "test:ci": "npm run test:coverage && npm run test:e2e && npm run test:performance",
