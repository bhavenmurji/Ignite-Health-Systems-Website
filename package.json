{
  "name": "ignite-health-systems-website",
  "version": "1.0.0",
  "description": "Ignite Health Systems - Healthcare technology platform website",
  "main": "index.html",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "next build",
    "lint": "next lint",
