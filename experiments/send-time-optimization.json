    "audience_specific_optimization": {
      "physician": {
        "peak_times": ["08:00", "12:00", "18:00"],
        "avoid_times": ["09:00-11:00", "14:00-17:00"],
        "reasoning": "Avoid patient care hours, target administrative time",
        "timezone_considerations": {
          "est": "Account for East Coast hospital schedules",
          "pst": "Later morning sends for West Coast",
          "cst": "Standard business hours alignment"
        },
        "seasonal_factors": {
          "medical_conference_season": "Increase frequency during major conferences",
          "flu_season": "Avoid peak patient volume periods",
          "summer": "Account for vacation schedules"
        }
      },
      "investor": {
        "peak_times": ["08:00", "10:00", "14:00"],
        "avoid_times": ["12:00-13:00", "17:00+"],
        "reasoning": "Standard business hours, avoid meal times",
        "timezone_considerations": {
          "est": "NYC/Boston financial center timing",
          "pst": "Silicon Valley tech investor schedules",
          "global": "Consider international investor time zones"
        },
        "seasonal_factors": {
          "fundraising_seasons": "Q1 and Q3 peak activity",
          "holiday_seasons": "Reduced activity in December/January",
          "conference_season": "HIMSS, HLTH, other healthcare events"
        }
      },
      "specialist": {
        "peak_times": ["10:00", "14:00", "16:00"],
        "avoid_times": ["early_morning", "evening"],
        "reasoning": "Standard professional hours, knowledge worker schedule",
        "timezone_considerations": {
          "distributed_teams": "Account for global tech teams",
          "client_focus": "Align with their client interaction times"
        },
        "seasonal_factors": {
          "technology_conferences": "RSA, Black Hat, healthcare IT events",
