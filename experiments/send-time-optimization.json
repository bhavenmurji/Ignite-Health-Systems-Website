      "tuesday": {
        "performance_hypothesis": "Peak professional engagement",
        "recommended_content": "detailed",
        "optimal_times": ["08:00", "10:00", "14:00"]
      },
      "wednesday": {
        "performance_hypothesis": "Consistent mid-week performance",
        "recommended_content": "moderate",
        "optimal_times": ["10:00", "14:00"]
      },
      "thursday": {
        "performance_hypothesis": "Good engagement, decision-making day",
        "recommended_content": "detailed",
        "optimal_times": ["08:00", "10:00", "14:00"]
      },
      "friday": {
        "performance_hypothesis": "Lower engagement, weekend mindset",
        "recommended_content": "concise",
        "optimal_times": ["08:00", "10:00"]
