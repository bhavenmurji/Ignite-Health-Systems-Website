      "cofounder": {
        "peak_times": ["immediate"],
        "reasoning": "Time-sensitive alerts require immediate delivery",
        "timezone_considerations": {
          "founder_timezone": "Use Dr. Murji's timezone for immediate alerts"
        }
      }
    },

    "test_framework": {
      "sample_size_per_slot": 300,
      "minimum_test_duration": "2_weeks",
      "maximum_test_duration": "6_weeks",
      "significance_threshold": 0.05,
      "minimum_detectable_effect": 0.15,

      "metrics_tracked": {
        "primary": [
          "open_rate",
          "click_through_rate"
        ],
        "secondary": [
          "time_to_open",
          "mobile_vs_desktop_opens",
          "forward_rate",
          "unsubscribe_rate"
        ],
        "conversion": [
          "demo_booking_rate",
          "meeting_scheduled_rate",
          "download_completion_rate"
        ]
      },

      "segmentation_analysis": {
        "by_device": ["mobile", "desktop", "tablet"],
        "by_timezone": ["EST", "CST", "MST", "PST", "international"],
        "by_industry": ["healthcare", "technology", "finance", "other"],
        "by_seniority": ["junior", "mid", "senior", "executive"]
      }
    },

    "automation_rules": {
      "dynamic_send_optimization": {
        "enabled": true,
        "description": "Automatically adjust send times based on recipient engagement patterns",
        "learning_period": "30_days",
        "minimum_data_points": 5,
        "adjustment_threshold": 0.2
      },

      "timezone_intelligence": {
        "enabled": true,
        "description": "Automatically detect and adjust for recipient time zones",
        "fallback_timezone": "EST",
        "international_handling": "business_hours_local"
      },

      "frequency_capping": {
        "max_emails_per_day": 1,
        "max_emails_per_week": 3,
        "respect_unsubscribe": true,
        "honor_preferences": true
      }
    },

